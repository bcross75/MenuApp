    <input type="hidden" id="id" name="id" value="@Model.Id"/>
    <div class="form-group">
        <label >Name</label>
        <input type="text" class="form-control" name="Name" id="Name" placeholder="Name" value="@Model.Name"/>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" name="Description" id="Description" placeholder="Description" value="@Model.Description"/>
    </div>
    <div class="form-group">
        <label>Calorie Count</label>
        <input type="text" class="form-control" name="CalorieCount" id="CalorieCount" placeholder="CalorieCount" value="@Model.CalorieCount"/>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" name="Price" id="Price" placeholder="Price" value="@Model.Price"/>
    </div>
    <div class="form-group">
        <label>Category</label>
        <select class="form-control" name="Category" id="Category" value="@Model.Category">
            <option value="1">Appetizers</option>
            <option value="2">Salads</option>
            <option value="3">Entrees</option>
            <option value="4">Desserts</option>
            <option value="5">Drinks</option>
            <option value="6">BarDrinks</option>
        </select>
    </div>
    
    


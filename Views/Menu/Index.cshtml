@model MenuApp.Models.Menu

<h2>Appetizers</h2>
<hr/>
<div class="row">
    @foreach (var menuItem in Model.Appetizers)
    {
        <div class="col-md-6 menuItem">
            <h3>@menuItem.Name</h3>
            <div>
                <a href="/MenuItem/Update/@menuItem.Id">Edit</a>
                <h4>@menuItem.Description</h4>
                Calorie: @menuItem.CalorieCount
                <h4 class="Price">@menuItem.Price</h4>
            </div>
        </div>
    }
</div>


